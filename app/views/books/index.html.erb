<html>
<body>
  
   <% if flash[:notice] %>
<div class="show flash"><%= notice %></div>
<% end %>

  <p id="notice"></p>
<h1 class="book">Books</h1>
<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3" class="colspan"></th>
  </thead>
  <% @lists.each do |list| %>
  <tbody>
    <tr>
      <td><span><%= list.title %></span></td>
      <td><span><%= list.body %></span></td>
      <td class="btn1"><%= link_to "Show",book_path(list.id), class: "btn" %></td>
      <td class="btn2"><%= link_to "Edit",edit_book_path(list.id), class: "btn" %></td>
      <td class="btn3"><%= link_to "Destroy",destroy_list_path(list.id),method: :delete,"data-confirm" => "Are you sure?", class: "btn" %></td>
    </tr>
       <% end %>
  </tbody>
  </table>
  
  
 <h2 class="newbook">New Book</h2>
 
 
 <%= form_with model:@list,url:'/books',method: :post do |f| %>
 
 <% if @list.errors.any? %>
 <div id="error">
   <div class="errors-text">
  <%= @list.errors.count %>errors prohibited this book from being saved:
  </div>
 <ul>
   <% @list.errors.full_messages.each do |message| %>
   <li class="error-message"><%= message %></li>
   <% end %>
 </ul>
 </div>
 
 <% end %>
 
 

  <div class="field">
    <label>title</laber><br>
    <%= f.text_field:title %>
  </div>

  <div class="field">
    <label>body</label><br>
    <%= f.text_area:body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  
  <% end %>
  
</form>
  
</body>
